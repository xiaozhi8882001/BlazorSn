@page "/parent-child"

<h3> 父组件</h3>
<p>父组件中的字符串: @parentString</p>
<button @onclick="PassToChild">向子组件传值</button>


<div class="row">
    <h2>父组件</h2>
</div>

<div class="row">
    <span>ParentYear: </span> <input class="form-control" type="text" @bind="ParentYear" @bind:event="oninput" />
</div>

<ChildComponent ToChild=@parentString
                FromChild=@ReceivedFromChild
                Year="@ParentYear">

</ChildComponent>

@functions{
    private string parentString = "父组件中初始化的字符串";
    private void PassToChild()
    {
        parentString += "- 向子组件传值";
    }
    private void ReceivedFromChild(string str)
    {
        parentString = str;
        StateHasChanged();
    }

    [Parameter]
    public int ParentYear { get; set; } = 1978;
}



