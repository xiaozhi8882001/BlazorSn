@page "/todo"

<h3>待办列表 (@todos.Count(todo=>!todo.IsDone))</h3>

<ul>
    @foreach (var todo in todos)
    {
        <li>
            <input type="checkbox" @bind="todo.IsDone" />
            <input @bind="todo.Title" />
        </li>
    }
</ul>

<input placeholder="要做的一些事情……" @bind="newTodo"/>
<button @onclick="AddTodo">添加到待办</button>

@code {
    private IList<TodoList.TodoItem> todos = new List<TodoList.TodoItem>();
    private string newTodo;

    private void AddTodo()
    {
        if (!string.IsNullOrEmpty(newTodo))
        {
            todos.Add(new TodoList.TodoItem { Title = newTodo });
            newTodo = string.Empty;
        }
    }
}
